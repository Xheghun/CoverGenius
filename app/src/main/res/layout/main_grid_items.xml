<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:padding="10dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="6dp">
    <LinearLayout
        android:id="@+id/root"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <ImageView
            android:id="@+id/main_grid_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_claim"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/main_grid_title"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:fontFamily="@font/lato_bold"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Buy Policies"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
